<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/user_search_recycler_layout"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/bookMarkButton"
                android:layout_marginRight="32dp"
                android:layout_alignParentEnd="true"
                android:tint="@color/siyah"
                android:background="@drawable/ic_bookmark_border_black_24dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />


        </RelativeLayout>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/kitapResmi"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"

            android:textColor="@color/Beyaz"
            android:textSize="20sp"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kitapPuani"/>
            <TextView
                android:id="@+id/kitapAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Kitap Adı : Suç Ve Ceza"
                android:textColor="@color/siyah"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/siyah"
                    android:textSize="16sp"
                    android:id="@+id/kitapBilgi"
                    android:layout_marginBottom="12dp"
                    android:text="Kitap Bilgisi:"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
</LinearLayout>
