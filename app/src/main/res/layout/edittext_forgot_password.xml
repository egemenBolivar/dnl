<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="8dp"
        android:layout_gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:gravity="start"
        android:textColor="@color/siyah"
        android:text="Lütfen üyeliğinize ait mail adresinizi giriniz. "
        android:textSize="18dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:id="@+id/question_soru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:gravity="start"
            android:textColor="@color/siyah"
            android:text="Email : "
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/edittext_forgot_password"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:layout_width="256dp"
            android:layout_height="64dp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/submit_forgot_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"

        android:background="@drawable/buton_ripple_selector"
        android:gravity="center"
        android:text="ŞİFRE SIFIRLA"
        android:textColor="@color/Beyaz"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/cancel_forgot_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"

        android:background="@drawable/buton_ripple_selector"
        android:gravity="center"
        android:text="İPTAL"
        android:textColor="@color/Beyaz"
        android:textSize="18dp"
        />



</LinearLayout>


